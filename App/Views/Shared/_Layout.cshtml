@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/estilos.css">
    <title>Envio de E-mail :: @ViewBag.Subtitulo</title>
</head>

<body style="padding-bottom: 80px" class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Controle de Usuários</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Principal</a>
                    <a class="nav-link text-danger" asp-controller="Home" asp-action="ParaMaiores">Para Maiores</a>
                    <a class="nav-link" asp-controller="Usuario" asp-action="Index">Usuários</a>
                    <partial name="_LoginLogoutLinkPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">        
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Controle de Usuários&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", false)
</body>

</html>